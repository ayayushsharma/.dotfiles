base_fpf() {
    dir_name=$(
        {
            echo "$HOME/todo"
            echo "$HOME/scripts"
            echo "$HOME/.dotfiles"
            find ~/projects -maxdepth 2 -type d -print
        } | awk -F/ '{print $NF "\t" $0}' \
          | fzf --tmux 55%,55% --with-nth=1 --delimiter='\t' \
          | awk -F'\t' '{print $2}'
    )
    echo "$dir_name"
}

fpf() {
    dir_name=$(base_fpf)
    if [ -n "$dir_name" ]; then
        cd "$dir_name"
    fi
}

timezsh() {
  shell=${1-$SHELL}
  echo "$shell is being used"
  for i in $(seq 1 10); do /usr/bin/time $shell -i -c exit; done
}

alias lint_py="pylint -r y -s y \`git diff --name-only --staged --diff-filter=d | grep -E '\.py$' | tr '\n' ' '\`"
